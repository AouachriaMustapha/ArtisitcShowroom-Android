<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b147"
    tools:context="com.artisticshowroom.esprit.tn.artisticshowroommobile.ProfilActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/zix14" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=" Name"

                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/et_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:background="#00000000"
                            android:padding="5dp"


                            android:textColorHint="#000"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_username"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:text="Username"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/user_name"
                        android:textSize="16sp"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:enabled="false"
                        android:textColorLink="@color/colorPrimary" />
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_email"/>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFFFF"
                        android:text="Email"
                        android:textSize="16sp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        android:ems="10"
                        android:id="@+id/et_email"
                        android:textColor="#FFFFFFFF"
                        android:enabled="false"
                        android:textColorLink="@color/colorPrimary"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/password_layout">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_lock"/>

                    <TextView
                        android:id="@+id/pass"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFFFF"
                        android:text="Password"
                        android:textSize="16sp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/et_password"
                        android:textSize="16sp"
                        android:textColor="#FFFFFFFF"
                        android:enabled="false"
                        android:password="true"
                        android:layout_marginLeft="20dp"
                        android:textColorLink="@color/colorPrimary" />
                </LinearLayout>




            </LinearLayout>
        </ScrollView>



        <Button
            android:id="@+id/listuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View List Users" />

        <Button
            android:id="@+id/Nuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out" />



    </LinearLayout>

</ScrollView>
